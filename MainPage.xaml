<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="RiderMaui.MainPage">
        <Grid
            RowDefinitions="*, Auto"
            ColumnDefinitions="*"
            Padding="0,0">
            
            <skia:SKCanvasView 
                HeightRequest="600"
                WidthRequest="1200"
                Grid.Row="0" 
                x:Name="canvasView"
                PaintSurface="OnCanvasViewPaintSurface" />
                <Border Grid.Row="1"
                   Padding="10"
                   BackgroundColor="CornflowerBlue"
                   >
                <VerticalStackLayout Spacing="4">
                    <Label Text="Camera (X, Y, Z)" FontAttributes="Bold" FontSize="12" />
                    <Grid ColumnDefinitions="Auto, *, Auto, *, Auto, *"
                          ColumnSpacing="4">
                        <Label Grid.Column="0" Text="X:" VerticalTextAlignment="Center" />
                        <Entry x:Name="CamXEntry" 
                               Grid.Column="1" 
                               Text="0" />
                        <Label Grid.Column="2" Text="Y:" VerticalTextAlignment="Center" />
                        <Entry x:Name="CamYEntry" 
                               Grid.Column="3" 
                               Text="0" />
                        <Label Grid.Column="4" Text="Z:" VerticalTextAlignment="Center" />
                        <Entry x:Name="CamZEntry" 
                               Grid.Column="5" 
                               Text="0" />
                    </Grid>
                    <Label Text="Light (X, Y, Z, B)" FontAttributes="Bold" FontSize="12" />
                    <Grid ColumnDefinitions="Auto, *, Auto, *, Auto, *, Auto, *"
                          ColumnSpacing="4">
                           <Label Grid.Column="0" Text="X:" VerticalTextAlignment="Center" />
                           <Entry x:Name="LightXEntry" 
                                  Grid.Column="1" 
                                  Text="0" />
                           <Label Grid.Column="2" Text="Y:" VerticalTextAlignment="Center" />
                           <Entry x:Name="LightYEntry" 
                                  Grid.Column="3" 
                                  Text="5" />
                           <Label Grid.Column="4" Text="Z:" VerticalTextAlignment="Center" />
                           <Entry x:Name="LightZEntry" 
                                  Grid.Column="5" 
                                  Text="-5" />
                           <Label Grid.Column="6" Text="B:" VerticalTextAlignment="Center" />
                           <Entry x:Name="BrightnessEntry" 
                                  Grid.Column="7" 
                                  Keyboard="Numeric" Text="0,8" />
                    </Grid>

                    <Label Text="Sphere (X, Y, Z, R)" FontAttributes="Bold" FontSize="12" />
                    <Grid ColumnDefinitions="Auto, *, Auto, *, Auto, *, Auto, *"
                          ColumnSpacing="4">
                        <Label Grid.Column="0" Text="X:" VerticalTextAlignment="Center" />
                        <Entry x:Name="SphereXEntry" 
                               Grid.Column="1"
                               Keyboard="Numeric" Text="0" />
                        <Label Grid.Column="2" Text="Y:" VerticalTextAlignment="Center" />
                        <Entry x:Name="SphereYEntry" 
                               Grid.Column="3" 
                               Keyboard="Numeric" Text="0" />
                        <Label Grid.Column="4" Text="Z:" VerticalTextAlignment="Center" />
                        <Entry x:Name="SphereZEntry" 
                               Grid.Column="5" 
                               Keyboard="Numeric" Text="-1" />
                        <Label Grid.Column="6" Text="R:" VerticalTextAlignment="Center" />
                        <Entry x:Name="SphereRadiusEntry" 
                               Grid.Column="7" 
                               Keyboard="Numeric" Text="0,5" />
                    </Grid>
                    <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                        <Button Text="Render" Clicked="OnRenderClicked" BackgroundColor="MediumSlateBlue" />
                        <!-- <Button Text="Reset" Clicked="OnResetClicked" BackgroundColor="DimGray" /> -->
                        <Button Text="Download" Clicked="OnDownloadClicked" BackgroundColor="LightSeaGreen" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Grid>

</ContentPage>
